{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@user-office-software/localization": ["libs/localization/src/index.ts"],
      "@user-office-software/logger": ["libs/logger/src/index.ts"],
      "@user-office-software/message-broker": [
        "libs/message-broker/src/index.ts"
      ],
      "@user-office-software/shared-types": ["libs/shared-types/src/index.ts"],
      "@user-office-software/validation": ["libs/validation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
